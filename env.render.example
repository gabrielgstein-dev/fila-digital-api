# Configuração para RENDER (QA)
NODE_ENV=development
PORT=3001

# Database - RENDER
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Frontend URLs
FRONTEND_URL=http://localhost:3000

# RabbitMQ (Mensageria)
RABBITMQ_URL=amqp://localhost:5672

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:19006,http://172.20.0.1:3000,http://172.20.0.1:19006,http://127.0.0.1:3000,http://127.0.0.1:19006,http://192.168.1.111:3000,http://192.168.1.111:19006,http://192.168.1.111:8081"

# Logs
LOG_LEVEL=debug,log,warn,error

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# Helmet
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_HSTS_MAX_AGE=0

# WhatsApp Rate Limiting (anti-spam)
# Delay mínimo entre mensagens WhatsApp em milissegundos
# Recomendado: 5000 (5 segundos) para evitar bloqueios por spam
# Mínimo seguro: 3000 (3 segundos)
# Para testes: 1000 (1 segundo) - use com cuidado!
WHATSAPP_MIN_DELAY_MS=5000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# Meta WhatsApp Business API Configuration
# Obtenha essas credenciais em: https://developers.facebook.com/
# Veja documentação completa em: docs/WHATSAPP-META-API-CONFIGURATION.md
META_API_VERSION=v19.0
META_PHONE_NUMBER_ID=your_phone_number_id_here
META_ACCESS_TOKEN=your_permanent_access_token_here
META_WABA_ID=your_whatsapp_business_account_id_here
META_APP_ID=your_app_id_here

# WhatsApp Template Language
# Idioma do template WhatsApp queue_info (pt_BR para português, en_US ou en para inglês)
# Default: pt_BR
WHATSAPP_TEMPLATE_LANGUAGE=pt_BR
