# Dockerfile simplificado para Cloud Run
FROM node:22-slim

# Build argument para DATABASE_URL
ARG DATABASE_URL

# Usar apenas depend√™ncias j√° inclu√≠das na imagem Node

# Definir diret√≥rio de trabalho
WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm

# Copiar arquivos de configura√ß√£o
COPY package.json pnpm-lock.yaml ./

# Instalar depend√™ncias (incluindo devDependencies para o build)
# Usar --shamefully-hoist para garantir layout compat√≠vel com Node.js padr√£o
# Isso coloca todas as depend√™ncias em node_modules/ diretamente, sem symlinks complexos
RUN pnpm config set shamefully-hoist true && \
    pnpm install --frozen-lockfile

# Copiar c√≥digo fonte
# O .dockerignore j√° exclui node_modules/, ent√£o os node_modules instalados acima s√£o preservados
COPY . .

# Gerar Prisma Client com DATABASE_URL dispon√≠vel
ENV DATABASE_URL=$DATABASE_URL
RUN npx prisma generate

# Build da aplica√ß√£o
RUN pnpm run build && \
    echo "üì¶ Verificando se dist/main.js foi gerado..." && \
    ls -la dist/ && \
    test -f dist/main.js || (echo "‚ùå dist/main.js n√£o foi gerado!" && exit 1)

# Definir vari√°veis de ambiente padr√£o
ENV NODE_ENV=production
ENV PORT=8080

# Expor porta 8080
EXPOSE 8080

# Iniciar aplica√ß√£o diretamente
CMD ["node", "dist/main.js"]
