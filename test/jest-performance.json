{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "maxWorkers": 1,
  "detectOpenHandles": false,
  "forceExit": true,
  "testTimeout": 60000,
  "setupFilesAfterEnv": ["<rootDir>/test-setup.ts"],
  "verbose": true,
  "silent": false,
  "noStackTrace": false,
  "bail": 0,
  "maxConcurrency": 1,
  "testSequencer": "<rootDir>/test-sequencer.js"
}
