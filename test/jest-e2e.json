{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "node_modules/",
    "dist/"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(@igniter-js|chalk)/)"
  ],
  "maxWorkers": 1,
  "detectOpenHandles": true,
  "forceExit": true,
  "testTimeout": 60000,
  "setupFilesAfterEnv": [
    "<rootDir>/test-setup.ts"
  ],
  "globalTeardown": "<rootDir>/global-teardown.ts",
  "testSequencer": "<rootDir>/test-sequencer.js",
  "verbose": true,
  "silent": false,
  "noStackTrace": true,
  "bail": 0,
  "maxConcurrency": 1,
  "cache": false,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "setupFiles": [
    "<rootDir>/crypto-polyfill.js"
  ]
}
