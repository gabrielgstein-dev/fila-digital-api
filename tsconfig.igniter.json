{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/igniter",
    "rootDir": "./src/igniter",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/igniter/**/*",
    "src/auth/**/*",
    "src/tenants/**/*",
    "src/tickets/**/*",
    "src/queues/**/*",
    "src/agents/**/*",
    "src/clients/**/*",
    "src/corporate-users/**/*",
    "src/prisma/**/*",
    "src/common/**/*"
  ],
  "exclude": ["node_modules", "dist", "test"]
}
